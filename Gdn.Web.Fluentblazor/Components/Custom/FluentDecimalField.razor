<FluentTextField @bind-Value="StringValue" Name="@Name" Label="@Label" Required="@Required" />

@code {

    [Parameter]
    public string? Name { get; set; }
    
    [Parameter]
    public string? Label { get; set; }

    [Parameter]
    public bool Required { get; set; }

    [Parameter]
    public decimal DecimalValue { get; set; }

    [Parameter]
    public EventCallback<decimal> DecimalValueChanged { get; set; }

    private string? StringValue
    {
        get => DecimalValue.ToString("n2");
        set 
        { 
            DecimalValue = UIUtils.ConvertTextToDecimal(value);
            DecimalValueChanged.InvokeAsync(DecimalValue);
        }
    }
}
